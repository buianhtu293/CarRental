@using App.Areas.Identity.Models.AccountViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Your Password?";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center text-muted">Enter the email address associated with your account.</h4>
<hr />

<div class="container d-flex justify-content-center min-vh-100" style="margin-top: 120px">
    <div class="w-50">
        <form method="post" class="bg-light p-4 rounded shadow">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="fw-bold">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3">Send</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
