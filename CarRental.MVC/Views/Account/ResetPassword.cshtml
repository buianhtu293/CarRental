@using App.Areas.Identity.Models.AccountViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container d-flex justify-content-center min-vh-100" style="margin-top: 120px">
    <div class="w-50">
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="bg-light p-4 rounded shadow">
            <h4 class="text-primary text-center">Reset Your Password</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Code" type="hidden" />

            <div class="form-group">
                <label asp-for="Email" class="fw-bold">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="fw-bold">New Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter new password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-success">Reset Password</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
