@using App.Areas.Identity.Models.AccountViewModels
@model VerifyAuthenticatorCodeViewModel
@{
    ViewData["Title"] = "Mã xác thực";
}

@* <h1>@ViewData["Title"].</h1> *@

<div class="container d-flex justify-content-center" style="margin-top: 150px; margin-bottom:150px">
    <div class="w-50">
        <form asp-controller="Account" asp-action="VerifyAuthenticatorCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal bg-light p-4 rounded shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="RememberMe" type="hidden" />
            <h2>Authenticator Code</h2>
            <h4 class="text-primary text-center">@ViewData["Status"]</h4>
            <hr />

            <div class="form-group">
                <label asp-for="Code" class="control-label">Authenticator Code</label>
                <input asp-for="Code" class="form-control" placeholder="Enter your authentication code" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberBrowser" class="form-check-input" id="rememberBrowserCheckbox" />
                <label for="rememberBrowserCheckbox" class="form-check-label">Remember this device</label>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            <p class="text-center mt-3">
                <a asp-action="UseRecoveryCode" class="text-danger">Lost your authentication code? Use a saved recovery code instead.</a>
            </p>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
