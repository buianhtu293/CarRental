@model GuestHomepageViewModel
@{
	ViewBag.Title = "Homepage - Guest";
}

<!-- Font Awesome 6.5.1 -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

@if (User.Identity.IsAuthenticated)
{
	@if (User.IsInRole("CarOwner"))
	{
		Context.Response.Redirect("/Home/Owner");
	}
	else
	{
		Context.Response.Redirect("/Customer/Index");
	}
}
else
{
	<div class="container mt-4">

		<!-- Banner Section -->
		<div class="row text-center mb-5 banner-section">
			<div class="col-md-6 mb-4">
				<div class="p-4 h-100 shadow-sm rounded-4 bg-light banner-card">
					<h2 class="fw-bold text-primary mb-3">Looking for a vehicle?</h2>
					<p class="text-muted">Choose between 100's of private cars for rent at really low prices!</p>
					<a href="/Customer/Index" class="btn btn-primary btn-lg mt-3">Find a Rental Car Near You</a>
				</div>
			</div>
			<div class="col-md-6 mb-4">
				<div class="p-4 h-100 shadow-sm rounded-4 bg-light banner-card">
					<h2 class="fw-bold text-success mb-3">Are you a car owner?</h2>
					<p class="text-muted">List your car and make money from your asset today!</p>
					<a href="/Login" class="btn btn-outline-success btn-lg mt-3">List Your Car Today</a>
				</div>
			</div>
		</div>

		<!-- Why Us -->
		<section class="mb-5">
			<vc:why-us></vc:why-us>
		</section>

		<!-- Feedback -->
		<section class="mb-5">
			<vc:feedback-section></vc:feedback-section>
		</section>

		<!-- Where to Find Us -->
		<section class="mb-5">
			<vc:where-to-find-us></vc:where-to-find-us>
		</section>

	</div>
}

@section Styles {
	
	<style>
		/* Banner Section */
		.banner-section {
		}

		.banner-card {
			transition: transform 0.3s ease, box-shadow 0.3s ease;
			background: #ffffff;
			border: 1px solid #f0f0f0;
		}

			.banner-card:hover {
				transform: translateY(-8px);
				box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
			}

			/* Typography */
			.banner-card h2 {
				font-size: 1.8rem;
				letter-spacing: 0.5px;
			}

			.banner-card p {
				font-size: 1rem;
				color: #6c757d;
			}

			/* Buttons */
			.banner-card .btn {
				padding: 0.7rem 1.5rem;
				border-radius: 30px;
				font-weight: 600;
				transition: all 0.3s ease;
			}

				.banner-card .btn:hover {
					transform: scale(1.05);
				}

		/* Why Us */
		/* Section Styling */
		.why-us-section {
			background: linear-gradient(135deg, #f8fbff 0%, #fefefe 100%);
			border-radius: 30px;
		}

		.section-title {
			font-size: 2.2rem;
			background: linear-gradient(90deg, #007bff, #00c851);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
		}

		/* Card Styling */
		.why-us-card {
			background: #fff;
			border-radius: 20px;
			box-shadow: 0 6px 20px rgba(0,0,0,0.05);
			transition: all 0.3s ease;
			border: 1px solid rgba(0,0,0,0.05);
			position: relative;
			overflow: hidden;
		}

			.why-us-card:hover {
				transform: translateY(-10px) scale(1.02);
				box-shadow: 0 12px 35px rgba(0,0,0,0.12);
			}

		/* Icon Wrapper */
		.icon-wrapper {
			width: 80px;
			height: 80px;
			border-radius: 50%;
			margin: 0 auto;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 2.5rem;
			transition: all 0.3s ease;
			box-shadow: 0 5px 15px rgba(0,0,0,0.08);
		}

		.why-us-card:hover .icon-wrapper {
			transform: scale(1.15) rotate(5deg);
			box-shadow: 0 10px 25px rgba(0,0,0,0.15);
		}

		/* Text */
		.why-us-card h5 {
			margin-top: 1rem;
			font-size: 1.2rem;
			color: #212529;
		}

		.why-us-card p {
			font-size: 0.95rem;
			color: #6c757d;
			margin-top: 0.5rem;
		}

		/* Feedback */
		/* Feedback Section */
		.feedback-section {
			background: linear-gradient(135deg, #f9fbfd 0%, #ffffff 100%);
			border-radius: 30px;
		}

			/* Section Title (reuse style from Why Us) */
			.feedback-section .section-title {
				font-size: 2rem;
				background: linear-gradient(90deg, #007bff, #00c851);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}

		/* Feedback Card */
		.feedback-card {
			transition: all 0.3s ease;
			background: #fff;
			border-radius: 20px;
			border: 1px solid rgba(0,0,0,0.05);
		}

			.feedback-card:hover {
				transform: translateY(-8px) scale(1.02);
				box-shadow: 0 12px 35px rgba(0,0,0,0.12);
			}

		/* Avatar */
		.feedback-avatar {
			width: 70px;
			height: 70px;
			object-fit: cover;
			border-radius: 50%;
			border: 3px solid #f0f0f0;
			box-shadow: 0 5px 15px rgba(0,0,0,0.08);
			transition: transform 0.3s ease;
		}

		.feedback-card:hover .feedback-avatar {
			transform: scale(1.1);
		}

		/* Comment Text */
		.feedback-comment {
			font-size: 0.95rem;
			color: #495057;
			font-style: italic;
			line-height: 1.6;
			min-height: 60px;
			position: relative;
		}

			.feedback-comment i {
				color: #007bff;
				font-size: 0.8rem;
			}

		/* Star Rating */
		.star-rating i {
			margin: 0 2px;
			font-size: 1.1rem;
			transition: transform 0.2s ease;
		}

			.star-rating i:hover {
				transform: scale(1.2);
			}

		/* Where Car */
		/* Where Section */
		.where-section {
			background: linear-gradient(135deg, #f8fbff 0%, #ffffff 100%);
			border-radius: 30px;
		}

			/* Section Title (same as Feedback & Why Us) */
			.where-section .section-title {
				font-size: 2rem;
				background: linear-gradient(90deg, #007bff, #00c851);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}

		/* City Card */
		.city-card {
			background: #fff;
			border-radius: 20px;
			transition: all 0.3s ease;
			border: 1px solid rgba(0,0,0,0.05);
			overflow: hidden;
		}

			.city-card:hover {
				transform: translateY(-8px) scale(1.02);
				box-shadow: 0 12px 35px rgba(0,0,0,0.12);
			}

		/* Optional City Image */
		.city-img {
			height: 200px;
			object-fit: cover;
			transition: transform 0.4s ease;
		}

		.city-card:hover .city-img {
			transform: scale(1.1);
		}

		/* Card Text */
		.city-card h5 {
			font-size: 1.2rem;
			color: #212529;
			margin-bottom: 0.5rem;
		}

		.city-card p {
			font-size: 0.95rem;
			color: #6c757d;
			margin: 0;
		}


	</style>
}



