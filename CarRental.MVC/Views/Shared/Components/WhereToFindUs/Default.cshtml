@model List<CarRental.Application.DTOs.CitySummaryDto>

<section class="where-section">
    <div class="container">
        <h3 class="text-center mb-5 fw-bold section-title">Where to Find Us?</h3>
        <div class="row">
            @foreach (var city in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card city-card h-100 shadow-sm border-0 rounded-4">
                        @* Uncomment if you have images *@
                        @* <img src="@city.ImageUrl" class="card-img-top city-img" alt="@city.ProvinceName"> *@
                        <div class="card-body text-center p-4">
                            <h5 class="fw-semibold">@city.ProvinceName</h5>
                            <p class="text-muted">@city.CarCount+ cars available</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
