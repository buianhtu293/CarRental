@using CarRental.MVC.Models.Booking
@model BookingEditViewModel

@{
    ViewData["Title"] = $"Booking Updated - {Model.BookingNumber}";
    Layout = "_Layout";
}

<div class="container-fluid py-5" style="background: #f8f9fa;">
    <div class="container">
        <div class="step-header bg-success text-white">
            <div class="success-icon mb-3 text-center">
                <i class="fas fa-check-circle fa-5x"></i>
            </div>
            <h2 class="text-center">Booking Updated Successfully!</h2>
            <p class="mb-0 text-center">Your booking information has been saved</p>
        </div>

        <div class="form-card card">
            <div class="card-header bg-success text-white text-center">
                <h5 class="mb-0"><i class="fas fa-file-alt mr-2"></i>Updated Booking Confirmation</h5>
            </div>
            <div class="card-body">
                <div class="confirmation-details">
                    <!-- Booking Number -->
                    <div class="confirmation-item">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Booking Number:</strong>
                            </div>
                            <div class="col-md-6">
                                <span class="h5 text-primary font-weight-bold">@Model.BookingNumber</span>
                            </div>
                        </div>
                    </div>

                    <!-- Booking Date -->
                    <div class="confirmation-item">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Original Booking Date:</strong>
                            </div>
                            <div class="col-md-6">
                                @Model.BookingDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="confirmation-item">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Status:</strong>
                            </div>
                            <div class="col-md-6">
                                <span class="badge badge-warning p-2">Updated - @Model.Status</span>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Method -->
                    <div class="confirmation-item">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Payment Method:</strong>
                            </div>
                            <div class="col-md-6">
                                @Model.PaymentMethod
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Updated Rental Details Card -->
        <div class="form-card card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-calendar mr-2"></i>Updated Rental Details</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="detail-item">
                            <strong>Pickup Date:</strong><br>
                            <i class="fas fa-calendar-alt text-success mr-1"></i>
                            @Model.Information.PickupDate.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <strong>Return Date:</strong><br>
                            <i class="fas fa-calendar-alt text-danger mr-1"></i>
                            @Model.Information.ReturnDate.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="detail-item">
                            <strong>Duration:</strong><br>
                            @Model.NumberOfDays day(s)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <strong>Car:</strong><br>
                            @Model.CarInfo.Name
                        </div>
                    </div>
                </div>

                <!-- Car Details -->
                <div class="car-confirmation border rounded p-3 mb-3">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <img src="@Model.CarInfo.ImageUrl" alt="@Model.CarInfo.Name" 
                                 class="img-fluid rounded" style="height: 80px; object-fit: cover;">
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-1">@Model.CarInfo.Name</h6>
                            <p class="text-muted mb-1">@Model.CarInfo.LicensePlate</p>
                            <small class="text-muted">@Model.CarInfo.Location</small>
                            <div class="mt-1">
                                <small class="text-muted">
                                    @if (Model.CarInfo.Seats.HasValue)
                                    {
                                        <span class="mr-2"><i class="fas fa-users"></i> @Model.CarInfo.Seats seats</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.CarInfo.Transmission))
                                    {
                                        <span class="mr-2"><i class="fas fa-cogs"></i> @Model.CarInfo.Transmission</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.CarInfo.FuelType))
                                    {
                                        <span><i class="fas fa-gas-pump"></i> @Model.CarInfo.FuelType</span>
                                    }
                                </small>
                            </div>
                        </div>
                        <div class="col-md-3 text-right">
                            <div class="font-weight-bold text-primary">@Model.TotalAmount.ToString("N0") VND</div>
                            <small class="text-muted">Deposit: @Model.TotalDeposit.ToString("N0") VND</small>
                        </div>
                    </div>
                </div>

                <!-- Total Summary -->
                <div class="row mt-3 pt-3 border-top">
                    <div class="col-md-6">
                        <div class="d-flex justify-content-between">
                            <span><strong>Total Rental Fee:</strong></span>
                            <span class="font-weight-bold text-primary">@Model.TotalAmount.ToString("N0") VND</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-between">
                            <span><strong>Total Deposit:</strong></span>
                            <span class="font-weight-bold text-success">@Model.TotalDeposit.ToString("N0") VND</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Updated Renter Information -->
        <div class="form-card card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-user mr-2"></i>Updated Renter Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="contact-item">
                            <strong>Full Name:</strong><br>
                            @Model.Information.Renter.FullName
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-item">
                            <strong>Email:</strong><br>
                            <a href="mailto:@Model.Information.Renter.Email" class="text-primary">
                                @Model.Information.Renter.Email
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-item">
                            <strong>Phone Number:</strong><br>
                            <a href="tel:@Model.Information.Renter.PhoneNumber" class="text-primary">
                                @Model.Information.Renter.PhoneNumber
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-item">
                            <strong>Date of Birth:</strong><br>
                            @Model.Information.Renter.DateOfBirth.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-item">
                            <strong>License Number:</strong><br>
                            @Model.Information.Renter.LicenseNumber
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-item">
                            <strong>Address:</strong><br>
                            @Model.Information.Renter.Address
                            @if (!string.IsNullOrEmpty(Model.Information.Renter.Ward))
                            {
                                <br><small class="text-muted">@Model.Information.Renter.Ward, @Model.Information.Renter.District, @Model.Information.Renter.City</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mt-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-block">
                        <i class="fas fa-list mr-2"></i>Back to My Bookings
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-success btn-block">
                        <i class="fas fa-eye mr-2"></i>View Booking Details
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Index", "Car")" class="btn btn-outline-info btn-block">
                        <i class="fas fa-plus mr-2"></i>Book Another Car
                    </a>
                </div>
            </div>
        </div>

        <!-- Print Section -->
        <div class="text-center mt-3">
            <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                <i class="fas fa-print mr-2"></i>Print Confirmation
            </button>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .step-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .success-icon {
            animation: bounceIn 1s ease-in-out;
        }
        
        /* Bounce In Animation */
        @@keyframes bounceIn {
            0% {
                transform: scale(0.3);
                opacity: 0;
            }
            50% {
                transform: scale(1.05);
            }
            70% {
                transform: scale(0.9);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        
        .form-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            border: none;
            margin-bottom: 20px;
        }
        
        .form-card .card-header {
            border-radius: 15px 15px 0 0 !important;
            border-bottom: 1px solid #e3e6f0;
        }
        
        .confirmation-item {
            padding: 12px 0;
            border-bottom: 1px solid #e9ecef;
            transition: background-color 0.3s ease;
        }
        
        .confirmation-item:hover {
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 12px 10px;
        }
        
        .confirmation-item:last-child {
            border-bottom: none;
        }
        
        .detail-item {
            margin-bottom: 15px;
        }
        
        .car-confirmation {
            background: #f8f9fa;
            border: 1px solid #e9ecef !important;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .car-confirmation:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .contact-item {
            margin-bottom: 15px;
        }
        
        .contact-item a {
            text-decoration: none;
            font-weight: 500;
        }
        
        .contact-item a:hover {
            text-decoration: underline;
        }
        
        /* Print Styles */
        @@media print {
            .btn {
                display: none !important;
            }
            
            .card {
                border: 1px solid #333 !important;
                box-shadow: none !important;
            }
            
            .form-card {
                margin-bottom: 20px !important;
                break-inside: avoid;
            }
        }
    </style>
}