@using CarRental.MVC.Models.Booking
@model BookingItemViewModel

@{
    ViewData["Title"] = $"Booking Details - {Model.BookingNumber}";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-file-alt mr-2"></i>Booking Details</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">My Bookings</a></li>
                    <li class="breadcrumb-item active">@Model.BookingNumber</li>
                </ol>
            </nav>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Back to List
        </a>
    </div>

    <!-- Booking Summary Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h4 class="mb-0">
                        <i class="fas fa-hashtag mr-2"></i>@Model.BookingNumber
                    </h4>
                    <small>Booked on @Model.BookingDate.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="badge bg-light text-dark p-2 fs-6">
                        @Model.OverallStatus
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6><i class="fas fa-calendar mr-2"></i>Rental Period</h6>
                    <div class="row">
                        <div class="col-6">
                            <p class="mb-1"><strong>From:</strong></p>
                            <p class="text-success">
                                <i class="fas fa-calendar-alt mr-1"></i>
                                @Model.PickupDate.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                        <div class="col-6">
                            <p class="mb-1"><strong>To:</strong></p>
                            <p class="text-danger">
                                <i class="fas fa-calendar-alt mr-1"></i>
                                @Model.ReturnDate.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                    </div>
                    <p class="mb-1"><strong>Duration:</strong> @Model.NumberOfDays day(s)</p>
                </div>
                <div class="col-md-6">
                    <h6><i class="fas fa-info-circle mr-2"></i>Booking Summary</h6>
                    <p class="mb-1"><strong>Booking Number:</strong> @Model.BookingNumber</p>
                    <p class="mb-1"><strong>Booking Date:</strong> @Model.BookingDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="mb-1"><strong>Number of Cars:</strong> @Model.BookingItems.Count car(s)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Renter & Drivers Information -->
    @if (Model.RenterInfo != null || Model.DriversInfo?.Any() == true)
    {
        <h4 class="mb-3"><i class="fas fa-users mr-2"></i>Renter & Drivers Information</h4>
        
        <!-- Renter Information Card -->
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-user mr-2"></i>Renter Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Full Name:</strong> @Model.RenterInfo.FullName</p>
                                <p class="mb-1"><strong>Email:</strong> @Model.RenterInfo.Email</p>
                                <p class="mb-1"><strong>Phone:</strong> @Model.RenterInfo.PhoneNumber</p>
                                <p class="mb-1"><strong>Date of Birth:</strong> @Model.RenterInfo.DateOfBirth.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>License Number:</strong> @Model.RenterInfo.LicenseNumber</p>
                                <p class="mb-1"><strong>Address:</strong> @Model.RenterInfo.Address</p>
                                <p class="mb-1"><strong>Location:</strong> @Model.RenterInfo.FullAddress</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.RenterInfo.LicenseImageUrl))
                        {
                            <div class="text-center">
                                <label class="form-label"><strong>Driver License</strong></label>
                                <div>
                                    <img src="@Model.RenterInfo.LicenseImageUrl" alt="Renter License" 
                                         class="img-thumbnail license-image" style="max-width: 200px; max-height: 150px; cursor: pointer;"
                                         onclick="showImageModal('@Model.RenterInfo.LicenseImageUrl', 'Renter License Image')">
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-id-card fa-3x mb-2"></i>
                                <p>No license image available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Drivers Information Cards -->
        @if (Model.DriversInfo?.Any() == true)
        {
            @for (int i = 0; i < Model.DriversInfo.Count; i++)
            {
                var driver = Model.DriversInfo[i];
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-user-tie mr-2"></i>Driver @(i + 1) Information
                            @if (driver.IsSameAsRenter)
                            {
                                <span class="badge badge-info ml-2">Same as Renter</span>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (driver.IsSameAsRenter)
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle mr-2"></i>
                                This driver uses the same information as the renter.
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>Full Name:</strong> @driver.FullName</p>
                                            <p class="mb-1"><strong>Email:</strong> @driver.Email</p>
                                            <p class="mb-1"><strong>Phone:</strong> @driver.PhoneNumber</p>
                                            <p class="mb-1"><strong>Date of Birth:</strong> @driver.DateOfBirth.ToString("dd/MM/yyyy")</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>License Number:</strong> @driver.LicenseNumber</p>
                                            <p class="mb-1"><strong>Address:</strong> @driver.Address</p>
                                            <p class="mb-1"><strong>Location:</strong> @driver.FullAddress</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    @if (!string.IsNullOrEmpty(driver.LicenseImageUrl))
                                    {
                                        <div class="text-center">
                                            <label class="form-label"><strong>Driver License</strong></label>
                                            <div>
                                                <img src="@driver.LicenseImageUrl" alt="Driver @(i + 1) License" 
                                                     class="img-thumbnail license-image" style="max-width: 200px; max-height: 150px; cursor: pointer;"
                                                     onclick="showImageModal('@driver.LicenseImageUrl', 'Driver @(i + 1) License Image')">
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted">
                                            <i class="fas fa-id-card fa-3x mb-2"></i>
                                            <p>No license image available</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    }

    <!-- Cars in this Booking -->
    <h4 class="mb-3"><i class="fas fa-car mr-2"></i>Cars in this Booking</h4>
    
    @foreach (var item in Model.BookingItems)
    {
        <div class="card shadow-sm mb-4 booking-item" data-booking-item-id="@item.Id">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="mb-0">@item.CarName</h5>
                        <small class="text-muted">License Plate: @item.LicensePlate</small>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <span class="badge @item.StatusClass p-2">
                            @item.StatusDisplay
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Car Images -->
                    <div class="col-md-4">
                        @if (item.CarImages.Any())
                        {
                            <div id="carouselDetail-@item.Id" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @for (int i = 0; i < item.CarImages.Count; i++)
                                    {
                                        <button type="button" data-bs-target="#carouselDetail-@item.Id" 
                                                data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" 
                                                aria-current="@(i == 0 ? "true" : "false")" 
                                                aria-label="Slide @(i + 1)"></button>
                                    }
                                </div>
                                <div class="carousel-inner">
                                    @for (int i = 0; i < item.CarImages.Count; i++)
                                    {
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@item.CarImages[i]" class="d-block w-100 rounded" 
                                                 alt="@item.CarName" style="height: 250px; object-fit: cover;">
                                        </div>
                                    }
                                </div>
                                @if (item.CarImages.Count > 1)
                                {
                                    <button class="carousel-control-prev" type="button" 
                                            data-bs-target="#carouselDetail-@item.Id" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" 
                                            data-bs-target="#carouselDetail-@item.Id" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                }
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">@item.CarImages.Count image(s)</small>
                            </div>
                        }
                        else
                        {
                            <img src="@item.PrimaryImage" class="img-fluid rounded" 
                                 alt="@item.CarName" style="height: 250px; width: 100%; object-fit: cover;">
                        }
                    </div>

                    <!-- Car Details -->
                    <div class="col-md-8">
                        <h6 class="mb-3">Car Information</h6>
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Brand & Model:</small><br>
                                <strong>@item.CarName</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">License Plate:</small><br>
                                <strong>@item.LicensePlate</strong>
                            </div>
                        </div>
                        
                        <h6 class="mb-3 mt-4">Pricing Details</h6>
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Base Price:</small><br>
                                <strong>@item.PricePerDay.ToString("N0") VND/day</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Duration:</small><br>
                                <strong>@Model.NumberOfDays day(s)</strong>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Deposit:</small><br>
                                <strong class="text-info">@item.Deposit.ToString("N0") VND</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Subtotal:</small><br>
                                <strong class="text-primary">@item.SubTotal.ToString("N0") VND</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Booking Totals -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-calculator mr-2"></i>Booking Summary</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Payment Information</h6>
                    <div class="row mb-2">
                        <div class="col-6">
                            <small class="text-muted">Total Rental Amount:</small><br>
                            <strong class="text-primary">@Model.TotalAmount.ToString("N0") VND</strong>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Total Deposit:</small><br>
                            <strong class="text-success">@Model.TotalDeposit.ToString("N0") VND</strong>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h6>Booking Information</h6>
                    <div class="row mb-2">
                        <div class="col-6">
                            <small class="text-muted">Number of Cars:</small><br>
                            <strong>@Model.BookingItems.Count car(s)</strong>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Total Duration:</small><br>
                            <strong>@Model.NumberOfDays day(s)</strong>
                        </div>
                    </div>
                </div>
            </div>
            
            <hr>
            
            <div class="text-center">
                <h4 class="text-primary mb-0">
                    Grand Total: @Model.TotalAmount.ToString("N0") VND
                </h4>
                <small class="text-muted">Including @Model.TotalDeposit.ToString("N0") VND deposit</small>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .booking-item {
            transition: all 0.3s ease;
        }
        
        .booking-item:hover {
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        }
        
        .badge-warning {
            background-color: #ffc107;
            color: #212529;
        }
        
        .badge-success {
            background-color: #28a745;
        }
        
        .badge-info {
            background-color: #17a2b8;
        }
        
        .badge-danger {
            background-color: #dc3545;
        }
        
        .badge-secondary {
            background-color: #6c757d;
        }
        
        .carousel-indicators {
            margin-bottom: -10px;
        }
        
        .carousel-indicators button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }
        
        .license-image {
            transition: transform 0.2s ease;
        }
        
        .license-image:hover {
            transform: scale(1.05);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-advance carousels with slower interval
            $('.carousel').each(function() {
                $(this).carousel({
                    interval: 5000
                });
            });
        });
        
        // Function to show license image in modal
        function showImageModal(imageUrl, title) {
            $('#imageModalLabel').text(title);
            $('#imageModalBody').html(`<img src="${imageUrl}" class="img-fluid" alt="${title}" style="width: 100%; height: auto;">`);
            var imageModal = new bootstrap.Modal(document.getElementById('imageModal'));
            imageModal.show();
        }
    </script>
}

<!-- Add anti-forgery token for AJAX requests -->
@Html.AntiForgeryToken()

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">License Image</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" id="imageModalBody">
                <!-- Image will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>