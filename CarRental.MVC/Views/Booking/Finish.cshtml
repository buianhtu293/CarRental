@using CarRental.MVC.Models.Booking
@model BookingFinishViewModel

@{
    ViewData["Title"] = "Booking Successful";
    Layout = "_Layout";
}

<div class="container-fluid py-5" style="background: #f8f9fa;">
    <div class="container">
        <!-- Progress Bar -->
        @await Html.PartialAsync("_BookingProgress", Model.Progress)

        <!-- Success Message -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-check-circle fa-5x text-success"></i>
                        </div>
                        <h1 class="text-success mb-3">@Model.SuccessMessage</h1>
                        <p class="lead text-muted mb-4">@Model.DetailMessage</p>
                        
                        <!-- Booking Information -->
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <div class="alert alert-light border">
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <strong>Booking Number:</strong><br>
                                            <span class="h5 text-primary font-weight-bold">@Model.BookingNumber</span>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Booking Date:</strong><br>
                                            <span>@Model.BookingDate.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Booking Status:</strong><br>
                                            <span class="badge @Model.GetBookingStatusClass() p-2">@Model.GetBookingStatusText()</span>
                                        </div>
                                        <div class="col-md-6 mb-2">
                                            <strong>Payment Status:</strong><br>
                                            <span class="badge @Model.GetPaymentStatusClass() p-2">@Model.GetPaymentStatusText()</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Booking Summary -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-receipt mr-2"></i>Booking Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Rental Duration:</span>
                            <span class="font-weight-bold">@Model.BookingSummary.NumberOfDays days</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Pickup Date:</span>
                            <span>@Model.BookingSummary.PickupDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Return Date:</span>
                            <span>@Model.BookingSummary.ReturnDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Number of Cars:</span>
                            <span>@Model.BookingSummary.NumberOfCars car(s)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Payment Method:</span>
                            <span class="font-weight-bold">@Model.PaymentMethod</span>
                        </div>
                        <hr>
                        
                        @foreach (var item in Model.BookingSummary.CarItems)
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between">
                                    <small class="text-muted">@item.CarName</small>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>@item.PricePerDay.ToString("N0") VND × @Model.BookingSummary.NumberOfDays days</span>
                                    <span class="font-weight-bold">@item.SubTotal.ToString("N0") VND</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Deposit:</span>
                                    <span class="font-weight-bold text-info">@item.Deposit.ToString("N0") VND</span>
                                </div>
                            </div>
                        }
                        
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="font-weight-bold">Total Rental Amount:</span>
                            <span class="font-weight-bold text-primary">@Model.BookingSummary.TotalAmount.ToString("N0") VND</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="font-weight-bold">Total Deposit Paid:</span>
                            <span class="font-weight-bold text-success">@Model.BookingSummary.TotalDeposit.ToString("N0") VND</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Next Steps -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-list-check mr-2"></i>@Model.NextStepsTitle</h5>
                    </div>
                    <div class="card-body">
                        <div class="next-steps">
                            @foreach (var step in Model.NextSteps)
                            {
                                <div class="step-item mb-3">
                                    <div class="d-flex align-items-start">
                                        <div class="step-icon mr-3">
                                            <i class="fas fa-check-circle text-success"></i>
                                        </div>
                                        <div class="step-content">
                                            <p class="mb-0">@step</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <hr>
                        
                        <!-- Contact Information -->
                        <div class="contact-info">
                            <h6 class="text-info mb-3">
                                <i class="fas fa-phone mr-2"></i>Contact Information
                            </h6>
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <strong>Hotline:</strong><br>
                                    <a href="tel:@Model.ContactPhone" class="text-primary">@Model.ContactPhone</a>
                                </div>
                                <div class="col-sm-6 mb-2">
                                    <strong>Email:</strong><br>
                                    <a href="mailto:@Model.ContactEmail" class="text-primary">@Model.ContactEmail</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h6 class="mb-4">What would you like to do next?</h6>
                        <div class="row">
                            @foreach (var action in Model.ActionButtons)
                            {
                                <div class="col-md-4 mb-3">
                                    @switch (action.Key)
                                    {
                                        case "GoToHomepage":
                                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-block">
                                                <i class="fas fa-home mr-2"></i>@action.Value
                                            </a>
                                            break;
                                        case "BookAnotherCar":
                                            <a href="@Url.Action("Index", "Car")" class="btn btn-outline-success btn-block">
                                                <i class="fas fa-plus mr-2"></i>@action.Value
                                            </a>
                                            break;
                                        case "ViewBooking":
                                            <a href="@Url.Action("Details", "Booking", new { bookingNumber = Model.BookingNumber })" class="btn btn-outline-info btn-block">
                                                <i class="fas fa-eye mr-2"></i>@action.Value
                                            </a>
                                            break;
                                        default:
                                            <button class="btn btn-outline-secondary btn-block" disabled>
                                                <i class="fas fa-cog mr-2"></i>@action.Value
                                            </button>
                                            break;
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .step-item {
            position: relative;
        }

        .step-icon {
            width: 20px;
            text-align: center;
            font-size: 16px;
        }

        .step-content {
            flex: 1;
            line-height: 1.5;
        }

        .next-steps .step-item:not(:last-child)::after {
            content: '';
            position: absolute;
            left: 9px;
            top: 25px;
            width: 2px;
            height: calc(100% - 5px);
            background: #e9ecef;
        }

        .contact-info a {
            text-decoration: none;
        }

        .contact-info a:hover {
            text-decoration: underline;
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .badge-danger {
            background-color: #dc3545;
        }

        .badge-secondary {
            background-color: #6c757d;
        }

        @@media print {
            .container-fluid {
                background: white !important;
            }
            
            .card {
                border: 1px solid #ddd !important;
                box-shadow: none !important;
            }
            
            .btn {
                display: none !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add print functionality
            $(document).keydown(function(e) {
                if (e.ctrlKey && e.keyCode === 80) { // Ctrl+P
                    e.preventDefault();
                    window.print();
                }
            });

            // Show success message
            toastr.success('Booking successful! We will contact you soon.', 'Success', {
                timeOut: 5000,
                progressBar: true
            });

            // Auto scroll to top
            $('html, body').animate({
                scrollTop: 0
            }, 500);
        });
    </script>
}