@using App.Areas.Identity.Models.ManageViewModels
@model SetPasswordViewModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}

<div class="container d-flex justify-content-center " style="margin-top: 120px">
    <div class="card shadow-lg border-0 rounded-4 p-4 mx-auto" style="max-width: 90%;">
        <h4 class="text-center mb-3 text-primary">Set Your Password</h4>
        <p class="text-center text-muted">
            Secure your account by setting a password. This allows you to log in without using an external account.
        </p>

        <form asp-controller="Manage" asp-action="SetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2" style="display: none;"></div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-bold">New Password</label>
                <input asp-for="NewPassword" class="form-control" placeholder="Enter a strong password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 shadow-sm">
                <i class="bi bi-check-circle"></i> Set Password
            </button>
        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
