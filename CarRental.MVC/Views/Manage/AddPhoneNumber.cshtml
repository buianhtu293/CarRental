@using App.Areas.Identity.Models.ManageViewModels
@model AddPhoneNumberViewModel
@{
    ViewData["Title"] = "Thêm số điện thoại";
}

@* <h1>@ViewData["Title"].</h1> *@
<div class="container d-flex justify-content-center" style="margin-top: 120px; margin-bottom: 120px">
    <div class="card shadow-lg border-0 rounded-4 p-4 mx-auto" style="max-width: 90%;">
        <h4 class="text-center mb-3 text-primary">Add Your Phone Number</h4>
        <p class="text-center text-muted">
            Enter your phone number to receive a verification code and secure your account.
        </p>

        <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2" style="display: none;"></div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                <div class="input-group">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 shadow-sm">
                <i class="bi bi-send"></i> Send Code
            </button>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
