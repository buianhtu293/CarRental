@using App.Areas.Identity.Models.ManageViewModels
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

@* <h1>@ViewData["Title"].</h1> *@

<div class="min-vh-100">
    <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal bg-light p-5 rounded shadow-lg border border-1 mx-auto" style="max-width: 600px; margin-top: 120px">
        <h3 class="text-primary fw-bold text-center mb-4">Change Your Password</h3>
        <p class="text-muted text-center mb-4">For security reasons, please choose a strong password.</p>
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger p-3 rounded"></div>

        <div class="mb-4 p-2">
            <label asp-for="OldPassword" class="form-label fw-semibold">Current Password</label>
            <input asp-for="OldPassword" type="password" class="form-control form-control-lg shadow-sm" placeholder="Enter current password" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <div class="mb-4 p-2">
            <label asp-for="NewPassword" class="form-label fw-semibold">New Password</label>
            <input asp-for="NewPassword" type="password" class="form-control form-control-lg shadow-sm" placeholder="Enter new password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-4 p-2">
            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm New Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg shadow-sm" placeholder="Confirm new password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="text-center p-3">
            <button type="submit" class="btn btn-danger px-5 py-2 shadow-sm fw-bold">Change Password</button>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
