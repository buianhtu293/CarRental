@model CarRental.Application.DTOs.CreateFeedbackDto

@{
    ViewData["Title"] = "Give Rating";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Give Rating</h4>
                </div>
                <div class="card-body">
                    <form asp-action="GiveRating" method="post">
                        @Html.HiddenFor(m => m.BookingID)
                        @Html.HiddenFor(m => m.CarID)
                        @Html.HiddenFor(m => m.UserID)

                        <!-- Rating -->
                        <div class="form-group mb-3">
                            <label class="form-label">Your Rating</label>
                            <div class="d-flex justify-content-between px-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Stars" value="@i" id="star@i" />
                                        <label class="form-check-label" for="star@i">@i ★</label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="Stars" class="text-danger"></span>
                        </div>

                        <!-- Comment -->
                        <div class="form-group mb-3">
                            <label asp-for="Comment" class="form-label"></label>
                            <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Write your feedback..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Submit</button>
                            <a asp-controller="BookingList" asp-action="Index"  class="btn btn-secondary mt-2">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
