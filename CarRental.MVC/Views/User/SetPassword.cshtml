@using App.Areas.Identity.Models.UserViewModels
@model SetUserPasswordModel
@{
    ViewData["Title"] = "Set Password";
}

<h4 class="text-center text-secondary">Set Password for Member: <span class="fw-bold text-primary">@ViewBag.user.UserName</span></h4>
<partial name="_StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"> Set New Password</h3>
            </div>
            <div class="card-body">
                <form id="set-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-bold">New Password</label>
                        <input asp-for="NewPassword" type="password" class="form-control border-primary" placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control border-primary" placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <button type="submit" class="btn btn-success btn-lg">
                             Set Password
                        </button>
                        <a class="btn btn-outline-secondary btn-lg" asp-action="Index">
                             Back to Members
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
